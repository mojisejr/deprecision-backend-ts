doctype html
html
  head 
    title deprecision.co
    link(rel="stylesheet" href='/css/style.css')
    link(rel="shotcut icon" type="image/png" href='/img/favicon.png')
  body
    div(class="container")
      div(class="logo")
      div(class="menu")
        a(href="") .info
      div(class="login")
        form(action="")
          div(class="form-control")
            span username:
            input(class="form-input username" type="text")
